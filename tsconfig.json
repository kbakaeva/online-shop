{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "target": "esnext",
    "module": "es6",
    "allowJs": true,
    "composite": true,
    "moduleResolution": "Node",
    "rootDir": "src",
    "outDir": "dist",
    "baseUrl": "./src",
    "sourceMap": true,
  },
  "files": ["src/index.ts"],
  "include": [
    "src",
	".eslintrc.js"
  ],
  "exclude": [
    "node_modules"
  ],
  "compileOnSave": false
}
