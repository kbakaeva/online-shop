{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "target": "esnext",
    "module": "es6",
    "allowJs": true,
    "composite": true,
    "moduleResolution": "Node",
    "rootDir": "src",
    "outDir": "dist",
    "baseUrl": "./src",
    "sourceMap": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "files": ["src/index.ts", "module.d.ts"],
  "include": ["src/**/*", "tests/**/*.ts", ".eslintrc.js"],
  "exclude": ["node_modules"],
  "compileOnSave": false
}
